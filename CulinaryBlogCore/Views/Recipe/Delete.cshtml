@model CulinaryBlogCore.Models.RecipeViewModels.DeleteRecipeViewModel;

@{
    ViewBag.Title = "Delete recipe";
}

<section class="delete-recipe register">
    <div class="register-form">
        <div class="register-header">
            <div><img src="/images/register-logo.png" alt="logo"></div>
            <h2>Delete Recipe</h2>
        </div>
        @using (Html.BeginForm("Delete/" + Model.Id, "Recipe", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div>
                <span><img src="@Model.ImagePath" alt="@Model.Name" height="120" /></span>
            </div>
            <div>
                <span>Name:</span> <span>@Model.Name</span>
            </div>
            <div>
                <span>Preparation time:</span> <span>@Model.PreparationTime.Value.ToString("hh:mm")</span>
            </div>
            <div>
                <span>Cooking time:</span> <span>@Model.CookingTime.Value.ToString("hh:mm")</span>
            </div>
            <div>
                <span>Portions:</span> <span>@Model.Portions</span>
            </div>
            <div>
                <span>Category:</span> <span>@Model.Category.Name</span>
            </div>
            <input type="hidden" name="ImagePath" value="@Model.ImagePath" />
            <button type="button" class="btn-recipe-delete" data-toggle="modal" data-target="#deleteRecipeModal">
                Delete
            </button>
            <div class="modal fade" id="deleteRecipeModal" tabindex="-1" role="dialog" aria-labelledby="recipeDeleteLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="recipeDeleteLabel">Delete Recipe</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            Are you sure you want to permanently remove this recipe?
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn btn-danger">Delete</button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</section>